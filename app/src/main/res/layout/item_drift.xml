<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_item_drift"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_item_drift"
        android:layout_width="53dp"
        android:layout_height="71dp"
        android:src="@mipmap/drift2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/drift_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="来自xxx的漂流瓶"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_item_drift"
        />

    <TextView
        android:id="@+id/drift_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《鲁滨逊漂流记》"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />


</androidx.constraintlayout.widget.ConstraintLayout>