<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_item_topic"
    android:background="@drawable/shape_round_corners"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/tv_item_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你读过的第一本哲学书是什么书？"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_item_topic_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你好测试"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_topic_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
