<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    app:cardBackgroundColor="@color/topic_blue"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_item_topic"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_item_topic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你读过的第一本哲学书是什么书？"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_item_topic_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你好测试"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="48dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_topic_title" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有18人参与"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
